---
import { markdownify } from "@/lib/utils/textConverter";
import AnimatedCircles from "@/components/AnimatedCircles.astro";
import ImageMod from "@/components/ImageMod.astro";
import config from "@/config/config.json";
import { getEntry } from "astro:content";

const contact = await getEntry("contact", "-index");
const { contact_form_action }: { contact_form_action: string } = config.params;
const { banner } = contact.data;
---

{
  banner && (
    <section class="overflow-hidden bg-theme-light lg:py-20 lg:pb-[110px] relative isolate pb-20 2xl:pb-28">
      <div class="bg-white w-full left-0 bottom-0 h-2/6 absolute -z-10" />
      <div class="container-sm">
        <div class="row gap-y-10">
          <div class="lg:col-7 mt-16">
            {banner.title && (
              <h1
                class="mb-6"
                data-aos="fade-left-sm"
                set:html={markdownify(banner.title)}
              />
            )}
            {banner.description && (
              <p
                class="mb-8"
                data-aos="fade-left-sm"
                data-aos-delay="50"
                set:html={markdownify(banner.description)}
              />
            )}
          </div>
          <div class="lg:col-5" data-aos="zoom-out-sm">
            <div class="bg-white shadow p-9 md:px-12">
              <form
                class="space-y-6"
                action={contact_form_action}
                method="POST">
                <div>
                  <label class="form-label" for="name">
                    Your Name*
                  </label>
                  <input
                    class="form-input"
                    required
                    id="name"
                    type="text"
                    placeholder="Enter Your Name"
                  />
                </div>
                <div>
                  <label class="form-label" for="phone">
                    Phone*
                  </label>
                  <input
                    class="form-input"
                    required
                    id="phone"
                    type="tel"
                    placeholder="Enter Phone"
                  />
                </div>
                <div>
                  <label class="form-label" for="email">
                    Email*
                  </label>
                  <input
                    class="form-input"
                    required
                    id="email"
                    type="email"
                    placeholder="Enter Email"
                  />
                </div>
                <div>
                  <label class="form-label" for="your-message">
                    Your Message*
                  </label>

                  <textarea
                    class="form-input"
                    required
                    name="your-message"
                    id="your-message"
                    cols="30"
                    rows="3"
                    placeholder="Your Messages"
                  />
                </div>

                <button class="btn btn-primary w-full" type="submit">
                  Send Message
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="absolute inset-0 hidden lg:block overflow-hidden -z-10">
        <div
          class="absolute top-1/3 -translate-y-2/3 -translate-x-1/2 left-0 md:scale-75 2xl:scale-100 hidden 2xl:block"
          data-aos="fade-in">
          <AnimatedCircles />
        </div>
        <ImageMod
          src="/images/shapes/bottom-left-triangles.png"
          alt="Shape"
          class="absolute bottom-0 right-0 xl:translate-x-2/3 2xl:translate-x-1/2 translate-x-1/2 scale-50 2xl:scale-100"
        />
      </div>
    </section>
  )
}
