---
const { img, name } = Astro.props;
---

<div class="bg-theme-light p-5 flex flex-col items-center leading-none">
  {
    img ? (
      <img src={img} alt={name} width="60" height="60" class="mb-3" />
    ) : (
      <div class="w-[60px] h-[60px] mb-3 bg-dark/10 rounded-full skeleton-loading" />
    )
  }
  {
    name ? (
      <span class="mb-5" set:html={name} />
    ) : (
      <div class="h-2 w-5/6 mb-5 bg-dark/20 rounded-full skeleton-loading" />
    )
  }

  <div class="h-2 w-5/6 bg-dark/20 rounded-full mb-2 skeleton-loading"></div>
  <div class="h-2 w-4/6 bg-dark/20 rounded-full skeleton-loading"></div>
</div>
