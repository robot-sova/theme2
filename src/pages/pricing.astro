---
import PricingCompare from "@/partials/PricingCompare.astro";
import PricingSection from "@/partials/Pricing.astro";
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import Faq from "@/partials/Faq.astro";
import CallToAction from "@/partials/CallToAction.astro";
import { getEntry } from "astro:content";

const pricing = await getEntry("pricing", "-index");
const { title, description, noindex, meta_title, image } = pricing.data;
---

<Base
title={title}
  meta_title={meta_title}
  description={description}
  image={image}
  noindex={noindex}>
  <PageHeader title={title} />

  <PricingSection />

  <hr class="divider" />

  <PricingCompare />

  <hr class="divider" />

  <Faq />

  <hr class="divider" />

  <CallToAction />
</Base>
